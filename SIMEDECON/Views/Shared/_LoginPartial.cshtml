@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "ml-auto" }))
    {
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav ml-auto">
    <li>
        <a class="btn btn-outline-info my-2 btn-circle  waves-circle waves-float float-right" data-toggle="tooltip" title="Administrar" style="display: block; margin: 0 auto;" href="@Url.Action("Index", "Manage")">@User.Identity.GetUserName() <i class="fas fa-cog"></i></a>
    @*@Html.ActionLink(User.Identity.GetUserName() + "", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
    </li>    
     &nbsp
